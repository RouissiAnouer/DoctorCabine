<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Bouton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="Bouton_success" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="Bouton_blue" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorFab</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="Bouton_red" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/errorColor</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="Bouton_sans_arriere" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorButtonText</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
